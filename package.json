{
  "name": "brain-stroke-prediction-fullstack",
  "version": "1.0.0",
  "description": "Brain Stroke Risk Prediction - Full-Stack Application with React Frontend and Flask Backend",
  "private": true,
  "engines": {
    "node": "18.x",
    "npm": "9.x",
    "python": "3.10.x"
  },
  "scripts": {
    "build": "cd frontend && npm install && npm run build && cd .. && mkdir -p backend/static && cp -r frontend/build/* backend/static/",
    "start": "python start.py",
    "dev": "cd backend && python app.py",
    "install-frontend": "cd frontend && npm install",
    "build-frontend": "cd frontend && npm run build",
    "setup-static": "mkdir -p backend/static && cp -r frontend/build/* backend/static/",
    "clean": "rm -rf frontend/node_modules frontend/build backend/static",
    "heroku-postbuild": "npm run build",
    "railway-build": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jellies641/brain-stroke-prediction.git"
  },
  "keywords": [
    "brain-stroke",
    "prediction",
    "machine-learning",
    "healthcare",
    "react",
    "flask",
    "full-stack"
  ],
  "author": "Brain Stroke Prediction Team",
