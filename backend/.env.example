# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///stroke_prediction.db

# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/stroke_prediction_db

# JWT Configuration
JWT_SECRET_KEY=jwt-secret-string-change-this-in-production

# Google OAuth Configuration (Optional)
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ML Model Configuration
MODEL_PATH=../ml-model/stroke_model.pkl
SCALER_PATH=../ml-model/scaler.pkl

# Email Configuration (Optional - for future features)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=stroke_prediction.log

# Database Settings
SQLALCHEMY_ECHO=False

# Pagination
PREDICTIONS_PER_PAGE=10

# Rate Limiting (Optional)
RATELIMIT_STORAGE_URL=memory://

# Production Settings (when FLASK_ENV=production)
SSL_REDIRECT=True

# Security Headers (automatically applied in production)
# These are configured in config.py and don't need to be set here
