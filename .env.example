# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/stroke_prediction
DEV_DATABASE_URL=postgresql://localhost/stroke_prediction_dev

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# CORS Configuration (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ML Model Configuration
MODEL_PATH=../ml-model/models
PYTHONPATH=../ml-model

# Email Configuration (Optional - for future use)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Railway/Production Configuration (Only set these in production)
# PORT=5000
# RAILWAY_ENVIRONMENT=production

# Frontend URL (for production CORS)
FRONTEND_URL=https://your-frontend-domain.com

# Security Configuration
BCRYPT_LOG_ROUNDS=12

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=stroke_prediction.log
